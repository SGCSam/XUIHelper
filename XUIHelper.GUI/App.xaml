<Application x:Class="XUIHelper.GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:XUIHelper.GUI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/NXEControls;component/Resources.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/NXEControls;component/Styles.xaml"/>
                <ResourceDictionary Source="Styles.xaml" />

                <ResourceDictionary>
                    <local:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
