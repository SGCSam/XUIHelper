<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type CheckBox}" x:Key="CheckBox.XUIHelper.NXE">
        <Setter Property="FontFamily" Value="{StaticResource FontFamily.XboxJK.Regular}" />
        <Setter Property="FontSize" Value="16px" />
        <Setter Property="Foreground" Value="#FFEBEBEB" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                ShadowDepth="1"
                Direction="315"
                Color="#FF0F0F0F"
                Opacity="0.5" 
                BlurRadius="0" />
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>